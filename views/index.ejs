<h1>Agregar un equipo</h1>
<form method="post" action="/equipo/add" >
    <label>Agregar equipo</label><br>
    <input type="text" name="nombre">
    <br><br>
    <input type="submit" value="Submit">
    <br><br>
</form>



<h1>Agregar una competición</h1>
<form method="post" action="/competicion/add" >
    <label>Agregar una competición</label><br>
    <input type="text" name="nombre">
    <br><br>
    <input type="submit" value="Submit">
    <br><br>
</form>


<h1>Relacionar un equipo a una competición</h1>
<form method="post" action="/competicion/equipo/add" >
    <label>Agregar equipo</label><br>
    <input type="text" name="nombreEquipo">
    <br><br>
    <label>Agregar competición</label><br>
    <input type="text" name="nombreCompeticion">
    <br><br>
    <input type="submit" value="Submit">
    <br><br>
</form>


<h3>Equipos</h3>
<ul>
<% actors.forEach(function(actor){ %>
    <li><%= actor.nombre %></li>
<% }) %>
</ul>



<h3>Competiciones</h3>
<ul>
<% movies.forEach(function(movie){ %>
    <li><%= movie.nombre %></li>
<% }) %>
</ul>


<h1>Eliminar un equipo</h1>
<form method="delete" action="/competicion/borrar/" >
    <label>Eliminar equipo</label><br>
    <input type="text" name="nombre">
    <br><br>
    <input type="submit" value="Submit">
    <br><br>
</form>



<h1>Eliminar una competición</h1>
<form method="delete" action="/competicion/borrar" >
    <label>Eliminar una competición</label><br>
    <input type="text" name="nombre">
    <br><br>
    <input type="submit" value="Submit">
    <br><br>
</form>



<h1>Borrar toda la base de datos</h1>
<form method="delete" action="/borrar" >
    <input type="submit" value="Submit">
    <br><br>
</form>







